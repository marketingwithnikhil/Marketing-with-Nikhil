  <script>
    // set footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Simple client-side form handler (replace with backend)
    function submitContact(e){
      e.preventDefault();
      const status = document.getElementById('formStatus');
      status.style.display = 'block';
      status.textContent = 'Sending...';

      // simulate sending
      setTimeout(() => {
        status.textContent = 'Thanks! Your message has been received. I will contact you soon.';
        e.target.reset();
      }, 800);
    }
  </script>
